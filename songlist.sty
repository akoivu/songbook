% --- LIVET ÄR HÄRLIGT --- %


\NewDocumentCommand{\livet}{m}{
\begin{song}{#1}{Livet är härligt}[\textit{Sävel:} Kasakkapartio]

\begin{songverse}
Livet är härligt,

Tavaritj, vårt liv är härligt.

Vi alla våra småbekymmer glömmer,

när vi har fått en tår på tanden, skål!
\end{songverse}

\begin{songverse}
Ta dig en vodka.

Tavaritj, en liten vodka.

Glasen i botten vi tillsammans tömmer.
Det kommer mera efter handen, hej!
\end{songverse}

\end{song}
}


